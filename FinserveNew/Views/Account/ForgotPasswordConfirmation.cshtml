@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finserve</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .confirmation-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .confirmation-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
        }

        .confirmation-body {
            padding: 30px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .btn-back {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="confirmation-header">
            <div class="logo">
                <i class="fas fa-building"></i> Finserve
            </div>
            <h3>Email Sent</h3>
        </div>
        <div class="confirmation-body">
            <div class="mb-4">
                <i class="fas fa-envelope-open-text text-secondary" style="font-size: 48px;"></i>
            </div>
            <h5 class="mb-3">Check Your Email</h5>
            <p>A password reset link will be sent to this email if an account is registered under it.</p>
            <p>Please check your email for instructions on how to reset your password.</p>
            <p class="text-muted small">If you don't receive an email within a few minutes, check your spam folder.</p>

            <div class="mt-4">
                <a asp-action="Login" class="btn btn-primary btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back to Login
                </a>
            </div>
        </div>
    </div>
</body>
</html>
