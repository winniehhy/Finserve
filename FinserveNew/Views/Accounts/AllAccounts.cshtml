@model IEnumerable<FinserveNew.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Employee List</h2>
        <a asp-action="Add" class="btn btn-primary">Add New Employee</a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="AllAccounts" method="get" class="mb-4">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by name, position or ID..." value="@ViewBag.Search" />
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Full Name</th>
                            <th>Position</th>
                            <th>Join Date</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EmployeeID</td>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Position</td>
                                <td>@item.JoinDate.ToShortDateString()</td>
                                <td>@item.Email</td>
                                <td>@item.ConfirmationStatus</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="ViewDetails" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-action="Documents" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-outline-info">Documents</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.TotalRecords > 0)
            {
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <span>Showing @(((ViewBag.Page - 1) * ViewBag.PageSize) + 1) to @(Math.Min(ViewBag.Page * ViewBag.PageSize, ViewBag.TotalRecords)) of @ViewBag.TotalRecords entries</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="me-2">Page size:</span>
                        <select class="form-select form-select-sm me-3" style="width: auto;" onchange="changePageSize(this.value)">
                            @foreach (var size in ViewBag.PageSizes)
                            {
                                <option value="@size" selected="@(size == ViewBag.PageSize)">@size</option>
                            }
                        </select>
                        <nav>
                            <ul class="pagination mb-0">
                                @{
                                    var totalPages = (int)Math.Ceiling(ViewBag.TotalRecords / (double)ViewBag.PageSize);
                                    var startPage = Math.Max(1, ViewBag.Page - 2);
                                    var endPage = Math.Min(totalPages, startPage + 4);
                                    startPage = Math.Max(1, endPage - 4);
                                }
                                <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("AllAccounts", new { page = ViewBag.Page - 1, pageSize = ViewBag.PageSize, search = ViewBag.Search })">Previous</a>
                                </li>
                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("AllAccounts", new { page = i, pageSize = ViewBag.PageSize, search = ViewBag.Search })">@i</a>
                                    </li>
                                }
                                <li class="page-item @(ViewBag.Page == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("AllAccounts", new { page = ViewBag.Page + 1, pageSize = ViewBag.PageSize, search = ViewBag.Search })">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changePageSize(size) {
            window.location.href = '@Url.Action("AllAccounts")' + 
                '?page=1' + 
                '&pageSize=' + size + 
                '&search=@ViewBag.Search';
        }
    </script>
}
