@model FinserveNew.Models.Invoice
@{
    ViewData["Title"] = "Delete Invoice";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0 text-danger">
        <i class="fas fa-archive me-2"></i>Remove Invoice
    </h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="alert alert-warning">
    <div class="d-flex align-items-center">
        <i class="fas fa-info-circle fa-2x me-3"></i>
        <div>
            <h5 class="alert-heading mb-1">Are you sure you want to remove this invoice from the list?</h5>
            <p class="mb-0">This invoice will be hidden from the main list but the data will be preserved in the system for record-keeping purposes.</p>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-file-invoice me-2"></i>Invoice Details
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Invoice Number:</dt>
                    <dd class="col-sm-8">
                        <strong class="text-primary">@Model.InvoiceNumber</strong>
                    </dd>

                    <dt class="col-sm-4">Client Name:</dt>
                    <dd class="col-sm-8">
                        <strong>@Model.ClientName</strong>
                        @if (!string.IsNullOrEmpty(Model.ClientCompany))
                        {
                            <br />
                            <small class="text-muted">@Model.ClientCompany</small>
                        }
                    </dd>

                    <dt class="col-sm-4">Issue Date:</dt>
                    <dd class="col-sm-8">@Model.IssueDate.ToString("dd MMMM yyyy")</dd>

                    <dt class="col-sm-4">Due Date:</dt>
                    <dd class="col-sm-8">
                        @Model.DueDate.ToString("dd MMMM yyyy")
                        @if (Model.DueDate < DateTime.Now && Model.Status == "Pending")
                        {
                            <br />
                            <small class="text-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Overdue by @((DateTime.Now - Model.DueDate).Days) days
                            </small>
                        }
                    </dd>
                </dl>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Amount:</dt>
                    <dd class="col-sm-8">
                        <span class="h5 text-success">@Model.FormattedAmount</span>
                        <br />
                        <small class="text-muted">Currency: @Model.Currency</small>
                    </dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @Model.StatusBadgeClass fs-6">@Model.Status</span>
                    </dd>

                    <dt class="col-sm-4">Year:</dt>
                    <dd class="col-sm-8">@Model.Year</dd>

                    <dt class="col-sm-4">Attached File:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.FilePath))
                        {
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                <span>Invoice File Available</span>
                                <a href="@Model.FilePath" target="_blank" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fas fa-external-link-alt"></i> View
                                </a>
                            </div>
                            <small class="text-info d-block mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                File will remain accessible in the system
                            </small>
                        }
                        else
                        {
                            <span class="text-muted">No file attached</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Remark))
        {
            <hr />
            <div>
                <dt>Remarks:</dt>
                <dd class="mt-2">
                    <div class="card bg-light">
                        <div class="card-body py-2">
                            @Model.Remark
                        </div>
                    </div>
                </dd>
            </div>
        }
    </div>
</div>

<!-- Removal Impact Information -->
<div class="card border-info mt-3">
    <div class="card-header bg-info text-white">
        <h6 class="card-title mb-0">
            <i class="fas fa-info-circle me-2"></i>What Happens When You Remove This Invoice?
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6 class="text-success">✓ What Will Happen:</h6>
                <ul class="text-success mb-0">
                    <li>Invoice will be hidden from the main list</li>
                    <li>All data will be preserved in the system</li>
                    <li>File attachments will remain accessible</li>
                    <li>Historical records will be maintained</li>
                    <li>Next invoice number will continue the sequence</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">✗ What Will NOT Happen:</h6>
                <ul class="text-muted mb-0">
                    <li>Data will not be permanently deleted</li>
                    <li>Files will not be removed from server</li>
                    <li>Reports will not lose historical data</li>
                    <li>Invoice numbers will not be reused</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Form -->
<div class="mt-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="InvoiceID" />

        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
                <a asp-action="Edit" asp-route-id="@Model.InvoiceID" class="btn btn-outline-primary">
                    <i class="fas fa-edit me-2"></i>Edit Instead
                </a>
            </div>

            <div>
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#confirmRemoveModal">
                    <i class="fas fa-archive me-2"></i>Remove from List
                </button>
            </div>
        </div>

        <!-- Confirmation Modal -->
        <div class="modal fade" id="confirmRemoveModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title">
                            <i class="fas fa-archive me-2"></i>Confirm Removal
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center">
                            <i class="fas fa-archive fa-3x text-warning mb-3"></i>
                            <h5>Remove Invoice from List?</h5>
                            <p class="mb-3">
                                This will remove invoice <strong class="text-primary">@Model.InvoiceNumber</strong>
                                from the main list, but all data will be preserved in the system.
                            </p>
                            <div class="alert alert-info text-start">
                                <small>
                                    <strong>Note:</strong> This is not a permanent deletion. The invoice data will remain in the system for record-keeping and can be restored if needed by system administrators.
                                </small>
                            </div>
                        </div>

                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" id="confirmCheck" required>
                            <label class="form-check-label" for="confirmCheck">
                                I understand this invoice will be removed from the list but data will be preserved
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <button type="submit" class="btn btn-warning" id="finalRemoveBtn" disabled>
                            <i class="fas fa-archive me-2"></i>Yes, Remove from List
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable final remove button based on checkbox
            $('#confirmCheck').on('change', function() {
                $('#finalRemoveBtn').prop('disabled', !this.checked);
            });

            // Add confirmation on form submit
            $('form').on('submit', function(e) {
                if (!$('#confirmCheck').is(':checked')) {
                    e.preventDefault();
                    alert('Please confirm that you understand this action.');
                    return false;
                }

                // Show loading state on submit button
                $('#finalRemoveBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Removing...');
                $('#finalRemoveBtn').prop('disabled', true);
            });

            // Reset modal state when it's closed
            $('#confirmRemoveModal').on('hidden.bs.modal', function() {
                $('#confirmCheck').prop('checked', false);
                $('#finalRemoveBtn').prop('disabled', true);
                $('#finalRemoveBtn').html('<i class="fas fa-archive me-2"></i>Yes, Remove from List');
            });

            // Focus on checkbox when modal opens
            $('#confirmRemoveModal').on('shown.bs.modal', function() {
                $('#confirmCheck').focus();
            });
        });
    </script>
}