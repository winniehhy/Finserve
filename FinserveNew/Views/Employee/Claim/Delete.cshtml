@model FinserveNew.Models.Claim
@{
    ViewData["Title"] = "Delete Claim";
}
<h2>Delete Claim</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this claim?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Claim Type</dt>
        <dd class="col-sm-10">@Model.ClaimType</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">RM @Model.ClaimAmount.ToString("F2")</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("dd MMM yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
