@model FinserveNew.Models.LeaveModel

@{
    ViewData["Title"] = "Leave Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0">Leave Application Details</h2>
    <a href="/Leaves/LeaveRecords" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Back to My Leaves
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Application Information</h4>
                <small class="text-muted">Leave ID: #@Model.LeaveID</small>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Leave Type:</strong><br>
                        <span class="text-muted">@Model.LeaveType?.TypeName</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong><br>
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge bg-warning">@Model.Status</span>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <span class="badge bg-success">@Model.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@Model.Status</span>
                        }
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Start Date:</strong><br>
                        <span class="text-muted">@Model.StartDate.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="col-md-6">
                        <strong>End Date:</strong><br>
                        <span class="text-muted">@Model.EndDate.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>Duration:</strong><br>
                        <span class="text-muted">@Model.LeaveDays day(s)</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Submission Date:</strong><br>
                        <span class="text-muted">
                            @if (Model.SubmissionDate != DateTime.MinValue)
                            {
                                @Model.SubmissionDate.ToString("dd/MM/yyyy HH:mm")
                            }
                            else
                            {
                                <text>Not set</text>
                            }
                        </span>
                    </div>
                </div>

                <div class="mb-3">
                    <strong>Reason:</strong><br>
                    <div class="bg-light p-3 rounded mt-2">
                        <p class="mb-0">@Model.Reason</p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong>Description:</strong><br>
                        <div class="bg-light p-3 rounded mt-2">
                            <p class="mb-0">@Model.Description</p>
                        </div>
                    </div>
                }

                @if (Model.Status == "Approved" || Model.Status == "Rejected")
                {
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Processed Date:</strong><br>
                            <span class="text-muted">@Model.ApprovalDate?.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Processed By:</strong><br>
                            <span class="text-muted">@Model.ApprovedBy</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ApprovalRemarks))
                    {
                        <div class="mb-3">
                            <strong>HR Remarks:</strong><br>
                            <div class="bg-light p-3 rounded mt-2">
                                <p class="mb-0">@Model.ApprovalRemarks</p>
                            </div>
                        </div>
                    }
                }

                <div class="d-flex justify-content-end gap-2">
                    @if (Model.Status == "Pending")
                    {
                        <a asp-action="Edit" asp-route-id="@Model.LeaveID" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.LeaveID" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete
                        </a>
                    }
                    <a asp-action="LeaveRecords" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Application Timeline
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">Application Submitted</h6>
                            <p class="timeline-text">
                                @if (Model.SubmissionDate != DateTime.MinValue)
                                {
                                    @Model.SubmissionDate.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <text>Not set</text>
                                }
                            </p>
                        </div>
                    </div>

                    @if (Model.Status == "Approved")
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Application Approved</h6>
                                <p class="timeline-text">@Model.ApprovalDate?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                    else if (Model.Status == "Rejected")
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-danger"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Application Rejected</h6>
                                <p class="timeline-text">@Model.ApprovalDate?.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-warning"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Pending Review</h6>
                                <p class="timeline-text">Waiting for HR approval</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb me-2"></i>Information
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Only pending applications can be edited</small>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Approved leaves cannot be modified</small>
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        <small>Contact HR for urgent changes</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            height: 100%;
            width: 2px;
            background-color: #e9ecef;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -37px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #e9ecef;
    }

    .timeline-title {
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .timeline-text {
        font-size: 12px;
        color: #6c757d;
        margin-bottom: 0;
    }
</style>