@model List<FinserveNew.Models.Claim>

@{
    ViewData["Title"] = "Approved Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0">Approved Claims</h2>
    <div class="btn-group" role="group">
        <a asp-action="HRIndex" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Claims
        </a>
        <a asp-action="PendingClaims" class="btn btn-outline-warning">
            <i class="fas fa-clock me-2"></i>Pending Claims
        </a>
        <a asp-action="RejectedClaims" class="btn btn-outline-danger">
            <i class="fas fa-times me-2"></i>Rejected Claims
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="form-container">
    @if (Model != null && Model.Any())
    {
        <!-- Summary Card -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-check-circle me-2"></i>Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-list-ul fa-2x text-success me-3"></i>
                            <div>
                                <h6 class="mb-0">Total Claims</h6>
                                <h4 class="text-success mb-0">@Model.Count</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-money-bill-wave fa-2x text-success me-3"></i>
                            <div>
                                <h6 class="mb-0">Total Amount</h6>
                                <h4 class="text-success mb-0">RM @Model.Sum(c => c.ClaimAmount).ToString("F2")</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-check fa-2x text-success me-3"></i>
                            <div>
                                <h6 class="mb-0">Latest Approval</h6>
                                <h6 class="text-success mb-0">@Model.OrderByDescending(c => c.ApprovalDate).First().ApprovalDate?.ToString("dd MMM yyyy")</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Claims Table -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-table me-2"></i>Approved Claims List
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Employee ID</th>
                                <th>Claim Type</th>
                                <th>Amount</th>
                                <th>Created Date</th>
                                <th>Approval Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>#@claim.Id</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@claim.EmployeeID</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@claim.ClaimType</span>
                                    </td>
                                    <td>
                                        <strong class="text-primary">RM @claim.ClaimAmount.ToString("F2")</strong>
                                    </td>
                                    <td>@claim.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.ApprovalDate?.ToString("dd MMM yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-success">@claim.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="ProcessClaim" asp-route-id="@claim.Id" 
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                                            {
                                                <a href="@claim.SupportingDocumentPath" target="_blank" 
                                                   class="btn btn-outline-secondary btn-sm">
                                                    <i class="fas fa-download me-1"></i>Document
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <div>
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Showing @Model.Count approved claims
                    </small>
                </div>
                <div>
                    <a href="#" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-file-export me-1"></i>Export to Excel
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-5x text-muted mb-4"></i>
                <h4 class="text-muted">No Approved Claims Found</h4>
                <p class="text-muted">There are currently no approved claims in the system.</p>
                <a asp-action="PendingClaims" class="btn btn-outline-primary">
                    <i class="fas fa-clock me-2"></i>View Pending Claims
                </a>
            </div>
        </div>
    }
</div>