@model IEnumerable<FinserveNew.Models.Claim>
@{
    ViewData["Title"] = "Claims Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Claims Management</h2>
            <p class="text-muted">Review and approve pending claim entries</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#pending" role="tab">
                        Pending <span class="badge bg-warning">@Model.Count(c => c.Status == "Pending")</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#approved" role="tab">
                        Approved <span class="badge bg-success">@Model.Count(c => c.Status == "Approved")</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#rejected" role="tab">
                        Rejected <span class="badge bg-secondary">@Model.Count(c => c.Status == "Rejected")</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">
                <!-- Pending Claims Tab -->
                <div class="tab-pane fade show active" id="pending" role="tabpanel">
                    @if (Model.Any(c => c.Status == "Pending"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Employee ID</th>
                                        <th>Claim Type</th>
                                        <th>Amount</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.Where(c => c.Status == "Pending"))
                                    {
                                        <tr>
                                            <td><strong>#CLM-@claim.Id.ToString("D3")</strong></td>
                                            <td><span class="badge bg-secondary">@claim.EmployeeID</span></td>
                                            <td><span class="badge bg-primary text-dark">@claim.ClaimType</span></td>
                                            <td><strong>RM @claim.ClaimAmount.ToString("F2")</strong></td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@claim.Description">
                                                    @(claim.Description?.Length > 50 ? claim.Description.Substring(0, 50) + "..." : claim.Description)
                                                </span>
                                            </td>
                                            <td><span class="badge bg-warning">@claim.Status</span></td>
                                            <td>@claim.CreatedDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye me-1"></i> View
                                                    </a>
                                                    <a asp-action="ProcessClaim" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-primary" title="Process Claim">
                                                        <i class="fas fa-clipboard-check me-1"></i> Process
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No claim entries pending approval.</p>
                        </div>
                    }
                </div>

                <!-- Approved Claims Tab -->
                <div class="tab-pane fade" id="approved" role="tabpanel">
                    @if (Model.Any(c => c.Status == "Approved"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Employee ID</th>
                                        <th>Claim Type</th>
                                        <th>Amount</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Approval Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.Where(c => c.Status == "Approved"))
                                    {
                                        <tr>
                                            <td><strong>#CLM-@claim.Id.ToString("D3")</strong></td>
                                            <td><span class="badge bg-secondary">@claim.EmployeeID</span></td>
                                            <td><span class="badge bg-primary text-dark">@claim.ClaimType</span></td>
                                            <td><strong>RM @claim.ClaimAmount.ToString("F2")</strong></td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@claim.Description">
                                                    @(claim.Description?.Length > 50 ? claim.Description.Substring(0, 50) + "..." : claim.Description)
                                                </span>
                                            </td>
                                            <td><span class="badge bg-success">@claim.Status</span></td>
                                            <td>@(claim.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No approved claim entries found.</p>
                        </div>
                    }
                </div>

                <!-- Rejected Claims Tab -->
                <div class="tab-pane fade" id="rejected" role="tabpanel">
                    @if (Model.Any(c => c.Status == "Rejected"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim ID</th>
                                        <th>Employee ID</th>
                                        <th>Claim Type</th>
                                        <th>Amount</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Rejection Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in Model.Where(c => c.Status == "Rejected"))
                                    {
                                        <tr>
                                            <td><strong>#CLM-@claim.Id.ToString("D3")</strong></td>
                                            <td><span class="badge bg-secondary">@claim.EmployeeID</span></td>
                                            <td><span class="badge bg-primary text-dark">@claim.ClaimType</span></td>
                                            <td><strong>RM @claim.ClaimAmount.ToString("F2")</strong></td>
                                            <td>
                                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@claim.Description">
                                                    @(claim.Description?.Length > 50 ? claim.Description.Substring(0, 50) + "..." : claim.Description)
                                                </span>
                                            </td>
                                            <td><span class="badge bg-secondary">@claim.Status</span></td>
                                            <td>@(claim.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <a asp-action="ClaimDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No rejected claim entries found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
