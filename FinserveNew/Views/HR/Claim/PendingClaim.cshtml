@model IEnumerable<FinserveNew.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0">Pending Claims</h2>
    <div class="btn-group" role="group">
        <a asp-action="AdminIndex" class="btn btn-outline-primary">
            <i class="fas fa-list me-2"></i>All Claims
        </a>
        <a asp-action="PendingClaims" class="btn btn-warning">
            <i class="fas fa-clock me-2"></i>Pending (@Model.Count())
        </a>
        <a asp-action="ApprovedClaims" class="btn btn-outline-success">
            <i class="fas fa-check me-2"></i>Approved
        </a>
        <a asp-action="RejectedClaims" class="btn btn-outline-danger">
            <i class="fas fa-times me-2"></i>Rejected
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="form-container">
    @if (Model != null && Model.Any())
    {
        <div class="alert alert-warning mb-4">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>@Model.Count() pending claims</strong> require your attention.
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Claim ID</th>
                        <th>Employee ID</th>
                        <th>Claim Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Submission Date</th>
                        <th>Days Pending</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        var daysPending = (DateTime.Now - claim.CreatedDate).Days;
                        <tr class="@(daysPending > 7 ? "table-warning" : "")">
                            <td>
                                <strong>#@claim.Id</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@claim.EmployeeID</span>
                            </td>
                            <td>
                                <span class="badge bg-info">@claim.ClaimType</span>
                            </td>
                            <td>
                                <strong>RM @claim.ClaimAmount.ToString("F2")</strong>
                            </td>
                            <td>
                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@claim.Description">
                                    @(claim.Description?.Length > 50 ? claim.Description.Substring(0, 50) + "..." : claim.Description)
                                </span>
                            </td>
                            <td>@claim.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (daysPending > 7)
                                {
                                    <span class="badge bg-danger">@daysPending days</span>
                                }
                                else if (daysPending > 3)
                                {
                                    <span class="badge bg-warning">@daysPending days</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@daysPending days</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ProcessClaim" asp-route-id="@claim.Id" class="btn btn-sm btn-primary" title="Process Claim">
                                    <i class="fas fa-clipboard-check"></i>
                                </a>
                                <a asp-action="AdminDetails" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                                {
                                    <a href="@claim.SupportingDocumentPath" target="_blank" class="btn btn-sm btn-outline-secondary" title="View Document">
                                        <i class="fas fa-paperclip"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
            <h5 class="text-success">Great! No pending claims</h5>
            <p class="text-muted">All claims have been processed.</p>
            <a asp-action="AdminIndex" class="btn btn-primary">
                <i class="fas fa-list me-2"></i>View All Claims
            </a>
        </div>
    }
</div>