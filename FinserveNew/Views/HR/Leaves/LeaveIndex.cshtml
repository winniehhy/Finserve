@model IEnumerable<FinserveNew.Models.LeaveModel>

@{
    ViewData["Title"] = "Leave Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0">Leave Management</h2>
    <div>
        <a href="/Leaves/LeaveReports" class="btn btn-info me-2">
            <i class="fas fa-chart-bar me-2"></i>Reports
        </a>
        <a href="/Leaves/EmployeeLeaveBalance" class="btn btn-secondary">
            <i class="fas fa-balance-scale me-2"></i>Employee Balances
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.Count(l => l.Status == "Pending")</h4>
                        <p class="card-text">Pending Applications</p>
                    </div>
                    <div>
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.Count(l => l.Status == "Approved")</h4>
                        <p class="card-text">Approved Applications</p>
                    </div>
                    <div>
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.Count(l => l.Status == "Rejected")</h4>
                        <p class="card-text">Rejected Applications</p>
                    </div>
                    <div>
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title">@Model.Count()</h4>
                        <p class="card-text">Total Applications</p>
                    </div>
                    <div>
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/Leaves/PendingLeaves" class="btn btn-warning btn-block w-100">
                            <i class="fas fa-clock me-2"></i>Pending Leaves
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Leaves/ApprovedLeaves" class="btn btn-success btn-block w-100">
                            <i class="fas fa-check-circle me-2"></i>Approved Leaves
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Leaves/RejectedLeaves" class="btn btn-danger btn-block w-100">
                            <i class="fas fa-times-circle me-2"></i>Rejected Leaves
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/Leaves/LeaveReports" class="btn btn-info btn-block w-100">
                            <i class="fas fa-chart-bar me-2"></i>Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Leave Applications Table -->
<div class="card">
    <div class="card-header">
        <h4 class="card-title">All Leave Applications</h4>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="leaveTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Leave ID</th>
                            <th>Employee</th>
                            <th>Leave Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leave in Model)
                        {
                            <tr>
                                <td>#@leave.LeaveID</td>
                                <td>@leave.Employee.Username</td>
                                <td>@leave.LeaveType.TypeName</td>
                                <td>@leave.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@leave.EndDate.ToString("dd/MM/yyyy")</td>
                                <td>@leave.LeaveDays days</td>
                                <td>
                                    @if (leave.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">@leave.Status</span>
                                    }
                                    else if (leave.Status == "Approved")
                                    {
                                        <span class="badge bg-success">@leave.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@leave.Status</span>
                                    }
                                </td>
                                <td>@leave.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="HRDetails" asp-route-id="@leave.LeaveID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (leave.Status == "Pending")
                                        {
                                            <a asp-action="ProcessLeave" asp-route-id="@leave.LeaveID" class="btn btn-sm btn-primary">
                                                <i class="fas fa-tasks"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No leave applications found.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#leaveTable').DataTable({
                "order": [[ 7, "desc" ]], // Sort by submitted date descending
                "pageLength": 25,
                "responsive": true,
                "language": {
                    "search": "Search leaves:",
                    "lengthMenu": "Show _MENU_ leaves per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ leaves",
                    "infoEmpty": "No leaves found",
                    "infoFiltered": "(filtered from _MAX_ total leaves)"
                }
            });
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
}