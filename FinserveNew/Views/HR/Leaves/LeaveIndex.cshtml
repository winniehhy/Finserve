@model IEnumerable<FinserveNew.Models.LeaveModel>
    @{
    ViewData["Title"] = "Leave Management";
    }

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Leave Management</h2>
            <p class="text-muted">Review and approve pending leave entries</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <a asp-action="UnpaidLeaveIndex" class="btn btn-outline-secondary">
                    <i class="fas fa-money-bill-alt me-2"></i>Unpaid Requests
                </a>
                <a asp-action="EmployeeLeaveBalance" class="btn btn-outline-secondary">
                    <i class="fas fa-balance-scale me-2"></i>Employee Balance
                </a>
            </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

        @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#pending" role="tab">
                        Pending <span class="badge bg-warning">@(Model?.Count(l => l.Status == "Pending") ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#approved" role="tab">
                        Approved <span class="badge bg-success">@(Model?.Count(l => l.Status == "Approved") ?? 0)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#rejected" role="tab">
                        Rejected <span class="badge bg-secondary">@(Model?.Count(l => l.Status == "Rejected") ?? 0)</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">
                <!-- Pending Leaves Tab -->
                <div class="tab-pane fade show active" id="pending" role="tabpanel">
                    @if (Model?.Any(l => l.Status == "Pending") == true)
        {
            <div class="table-responsive">
                            <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Leave ID</th>
                            <th>Employee ID</th>
                            <th>Employee Name</th>
                            <th>Leave Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Duration</th>
                            <th>Status</th>
                                        <th>Submission Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                                    @foreach (var leave in Model.Where(l => l.Status == "Pending"))
                                    {
                                        <tr>
                                            <td>#LVE-@leave.LeaveID.ToString("D3")</td>
                                            <td><span class="badge bg-secondary">@leave.EmployeeID</span></td>
                                            <td>@(leave.Employee != null ? ($"{leave.Employee.FirstName} {leave.Employee.LastName}") : "-")</td>
                                            <td> <span class="badge bg-info">@leave.LeaveType.TypeName</span></td>
                                            <td>@leave.StartDate.ToString("dd MMM yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <strong class="text-success">
                                    @{
                                            var duration = leave.LeaveDays > 0 ? leave.LeaveDays : leave.CalculatedLeaveDays;
                                    }
                                    @duration day@(duration != 1 ? "s" : "")
                                </strong>
                            </td>
                                            <td><span class="badge bg-warning">@leave.Status</span></td>
                                            <td>@leave.SubmissionDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewLeave(@leave.LeaveID)">
                                                        <i class="fas fa-eye me-1"></i> View
                                    </button>
                                                    <button class="btn btn-sm btn-outline-primary" title="Process Leave" onclick="processLeave(@leave.LeaveID)">
                                                        <i class="fas fa-edit me-1"></i> Process
                                    </button>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No leave entries pending approval.</p>
                        </div>
                    }
                </div>

                <!-- Approved Leaves Tab -->
                <div class="tab-pane fade" id="approved" role="tabpanel">
                    @if (Model?.Any(l => l.Status == "Approved") == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Approval Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model.Where(l => l.Status == "Approved"))
                                    {
                                        <tr>
                                            <td>#LVE-@leave.LeaveID.ToString("D3")</td>
                                            <td><span class="badge bg-secondary">@leave.EmployeeID</span></td>
                                            <td>@(leave.Employee != null ? ($"{leave.Employee.FirstName} {leave.Employee.LastName}") : "-")</td>
                                            <td><span class="badge bg-info">@leave.LeaveType.TypeName</span></td>
                                            <td>@leave.StartDate.ToString("dd MMM yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <strong class="text-success">
                                                    @{
                var duration = leave.LeaveDays > 0 ? leave.LeaveDays : leave.CalculatedLeaveDays;
                                                    }
                                                    @duration day@(duration != 1 ? "s" : "")
                                                </strong>
                                            </td>
                                            <td>
                                                @if (leave.Status == "Pending")
                                                {
                                                <span class="badge bg-warning">@leave.Status</span>
                                                    }
                                                else if (leave.Status == "Approved")
                                                {
                                                <span class="badge bg-success">@leave.Status</span>
                                                    }
                                                else
                                               {
                                                <span class="badge bg-danger">@leave.Status</span>
                                                    }
                                            </td>
                                            <td>@(leave.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewLeave(@leave.LeaveID)">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No approved leave entries found.</p>
                        </div>
                    }
                </div>

                <!-- Rejected Leaves Tab -->
                <div class="tab-pane fade" id="rejected" role="tabpanel">
                    @if (Model?.Any(l => l.Status == "Rejected") == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Rejection Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model.Where(l => l.Status == "Rejected"))
                                    {
                                        <tr>
                                            <td>#LVE-@leave.LeaveID.ToString("D3")</td>
                                            <td><span class="badge bg-secondary">@leave.EmployeeID</span></td>
                                            <td>@(leave.Employee != null ? ($"{leave.Employee.FirstName} {leave.Employee.LastName}") : "-")</td>
                                            <td><span class="badge bg-info">@leave.LeaveType.TypeName</span></td>
                                            <td>@leave.StartDate.ToString("dd MMM yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <strong class="text-success">
                                                    @{
                                                        var duration = leave.LeaveDays > 0 ? leave.LeaveDays : leave.CalculatedLeaveDays;
                                                    }
                                                    @duration day@(duration != 1 ? "s" : "")
                                                </strong>
                                            </td>
                                            <td><span class="badge bg-secondary">@leave.Status</span></td>
                                            <td>@(leave.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewLeave(@leave.LeaveID)">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No rejected leave entries found.</p>
            </div>
        }
        </div>
    </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script>
        function viewLeave(leaveId) {
            window.location.href = '@Url.Action("LeaveDetails", "Leaves")/' + leaveId;
        }

        function processLeave(leaveId) {
            window.location.href = '@Url.Action("ProcessLeave", "Leaves")/' + leaveId;
        }
        </script>
    }
