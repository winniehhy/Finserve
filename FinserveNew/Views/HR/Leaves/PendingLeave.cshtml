@model IEnumerable<FinserveNew.Models.LeaveModel>

@{
    ViewData["Title"] = "Pending Leaves";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-clock"></i> Pending Leave Applications
                    </h3>
                    <div class="card-tools">
                        <span class="badge badge-warning">@Model.Count() pending applications</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Days</th>
                                        <th>Submitted</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@leave.Employee.Username</strong><br>
                                                <small class="text-muted">@leave.Employee.EmployeeID</small>
                                            </td>
                                            <td>
                                                <span class="badge badge-info">@leave.LeaveType.TypeName</span>
                                            </td>
                                            <td>@leave.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge badge-secondary">@leave.LeaveDays days</span>
                                            </td>
                                               <td>
                                                @if (leave.SubmissionDate != default(DateTime))
                                                {
                                                    @leave.SubmissionDate.ToString("dd/MM/yyyy")
                                                    <br>
                                        
                                                    <small class="text-muted">@leave.SubmissionDate.ToString("HH:mm")</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-warning">@leave.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="ProcessLeave" asp-route-id="@leave.LeaveID"
                                                       class="btn btn-primary" title="Process Leave">
                                                        <i class="fas fa-cogs"></i>
                                                    </a>
                                                    <a asp-action="HRDetails" asp-route-id="@leave.LeaveID"
                                                       class="btn btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            <strong>No pending leave applications found.</strong>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="LeaveIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to All Leaves
                    </a>
             
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable for better functionality
            if ($('table').length > 0) {
                $('table').DataTable({
                    "order": [[ 5, "desc" ]], // Sort by submission date
                    "pageLength": 25,
                    "responsive": true,
                    "columnDefs": [
                        { "orderable": false, "targets": 7 } // Actions column
                    ]
                });
            }
        });
    </script>
}