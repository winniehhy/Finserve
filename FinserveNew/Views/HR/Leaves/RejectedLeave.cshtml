@model IEnumerable<FinserveNew.Models.LeaveModel>

@{
    ViewData["Title"] = "Rejected Leaves";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Fix for badge visibility issues */
        .badge-info {
            background-color: #17a2b8 !important;
            color: #ffffff !important;
        }
        
        .badge-success {
            background-color: #28a745 !important;
            color: #ffffff !important;
        }
        
        .badge-danger {
            background-color: #dc3545 !important;
            color: #ffffff !important;
        }
        
        .badge-secondary {
            background-color: #6c757d !important;
            color: #ffffff !important;
        }
        
        /* Ensure text is visible in all themes */
        .table td, .table th {
            color: inherit !important;
        }
        
        /* Alternative styling for badges */
        .leave-type-badge {
            background-color: #007bff;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .status-badge {
            background-color: #dc3545;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.875rem;
            font-weight: 500;
        }
        
        .days-badge {
            background-color: #6c757d;
            color: white;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.875rem;
            font-weight: 500;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-times-circle"></i> Rejected Leave Applications
                    </h3>
                    <div class="card-tools">
                        <span class="badge badge-danger">@Model.Count() rejected applications</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Days</th>
                                        <th>Rejected Date</th>
                                        <th>Status</th>
                                        <th>Rejection Reason</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@leave.Employee.Username</strong><br>
                                                <small class="text-muted">@leave.Employee.EmployeeID</small>
                                            </td>
                                            <td>
                                                @leave.LeaveType.TypeName
                                            </td>
                                            <td>@leave.StartDate.ToString("dd/MM/yyyy")</td>
                                            <td>@leave.EndDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @leave.LeaveDays days
                                            </td>
                                            <td>
                                                @if (leave.ApprovalDate.HasValue)
                                                {
                                                    @leave.ApprovalDate.Value.ToString("dd/MM/yyyy")
                                                    <br>
                                        
                                                    <small class="text-muted">@leave.ApprovalDate.Value.ToString("HH:mm")</small>
                                                }
                                            </td>
                                            <td>
                                                @leave.Status
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(leave.ApprovalRemarks))
                                                {
                                                    <small>@leave.ApprovalRemarks</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">No reason provided</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="HRDetails" asp-route-id="@leave.LeaveID"
                                                       class="btn btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i>
                            <strong>No rejected leave applications found.</strong>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="LeaveIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to All Leaves
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable for better functionality
            if ($('table').length > 0) {
                $('table').DataTable({
                    "order": [[ 5, "desc" ]], // Sort by rejection date
                    "pageLength": 25,
                    "responsive": true,
                    "columnDefs": [
                        { "orderable": false, "targets": 8 } // Actions column
                    ]
                });
            }
        });
    </script>
}