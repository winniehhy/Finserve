@model FinserveNew.Models.UnpaidLeaveRequestModel

@{
    ViewData["Title"] = "Unpaid Leave Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title mb-0">Unpaid Leave Request Details</h2>
    <a href="/Leaves/UnpaidLeaveIndex" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Back to Unpaid Leave List
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Request Information</h4>
                <small class="text-muted">Request ID: #LVE-@Model.UnpaidLeaveRequestID.ToString("D3")</small>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Employee</label>
                            <p class="mb-0">
                                <span class="badge bg-secondary me-2">@Model.EmployeeID</span>
                                @(Model.Employee != null ? $"{Model.Employee.FirstName} {Model.Employee.LastName}" : "N/A")
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Leave Type</label>
                            <p class="mb-0">
                                <span class="badge bg-info">@Model.LeaveType?.TypeName</span>
                                <span class="badge bg-warning text-dark ms-2">Unpaid</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Requested Days</label>
                            <p class="mb-0">
                                <span class="badge bg-primary">@Model.RequestedDays day@(Model.RequestedDays != 1 ? "s" : "")</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Excess Days (Unpaid)</label>
                            <p class="mb-0">
                                <span class="badge bg-warning text-dark">@Model.ExcessDays day@(Model.ExcessDays != 1 ? "s" : "")</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Status</label>
                            <p class="mb-0">
                                @if (Model.Status == "Pending")
                                {
                                    <span class="badge bg-warning">@Model.Status</span>
                                }
                                else if (Model.Status == "Approved")
                                {
                                    <span class="badge bg-success">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Model.Status</span>
                                }
                            </p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Submission Date</label>
                            <p class="mb-0">@Model.SubmissionDate.ToString("dd MMM yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h4 class="card-title">Leave Period</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Start Date</label>
                            <p class="mb-0">@Model.StartDate.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">End Date</label>
                            <p class="mb-0">@Model.EndDate.ToString("dd MMM yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h4 class="card-title">Reason for Leave</h4>
            </div>
            <div class="card-body">
                <p class="mb-0">@(string.IsNullOrEmpty(Model.Reason) ? "No reason provided" : Model.Reason)</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Leave Days Breakdown</h4>
            </div>
            <div class="card-body">
                @{
                    var paidDays = (int)(Model.RequestedDays - Model.ExcessDays);
                    var paidEndDate = Model.StartDate.AddDays(paidDays - 1);
                    var unpaidStartDate = paidEndDate.AddDays(1);
                }
                
                @if (paidDays > 0)
                {
                    <div class="mb-3">
                        <div class="card border-success">
                            <div class="card-body text-center">
                                <h6 class="card-title text-success">
                                    <i class="fas fa-check-circle me-2"></i>@Model.LeaveType?.TypeName (Paid)
                                </h6>
                                <p class="card-text">
                                    <strong>@Model.StartDate.ToString("dd MMM") - @paidEndDate.ToString("dd MMM yyyy")</strong><br>
                                    <span class="badge bg-success">@paidDays day@(paidDays != 1 ? "s" : "")</span>
                                </p>
                                <small class="text-muted">Covered by leave balance</small>
                            </div>
                        </div>
                    </div>
                }
                
                @if (Model.ExcessDays > 0)
                {
                    <div class="mb-3">
                        <div class="card border-warning">
                            <div class="card-body text-center">
                                <h6 class="card-title text-warning">
                                    <i class="fas fa-money-bill-alt me-2"></i>Unpaid Leave
                                </h6>
                                <p class="card-text">
                                    <strong>@unpaidStartDate.ToString("dd MMM") - @Model.EndDate.ToString("dd MMM yyyy")</strong><br>
                                    <span class="badge bg-warning text-dark">@Model.ExcessDays day@(Model.ExcessDays != 1 ? "s" : "")</span>
                                </p>
                                <small class="text-muted">Exceeds available balance</small>
                            </div>
                        </div>
                    </div>
                }
                
                <!-- Summary -->
                <div class="mt-3">
                    <div class="alert alert-info">
                        <h6 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Summary</h6>
                        <p class="mb-1"><strong>Total Requested:</strong> @Model.RequestedDays day@(Model.RequestedDays != 1 ? "s" : "")</p>
                        <p class="mb-1"><strong>Paid Days:</strong> @paidDays day@(paidDays != 1 ? "s" : "") (from @Model.LeaveType?.TypeName balance)</p>
                        <p class="mb-0"><strong>Unpaid Days:</strong> @Model.ExcessDays day@(Model.ExcessDays != 1 ? "s" : "") (excess beyond balance)</p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.Status == "Approved" || Model.Status == "Rejected")
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title">Processing Information</h4>
                </div>
                <div class="card-body">
                    @if (Model.ApprovalDate.HasValue)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Processed Date</label>
                            <p class="mb-0">@Model.ApprovalDate.Value.ToString("dd MMM yyyy HH:mm")</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ApprovalRemarks))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">HR Remarks</label>
                            <p class="mb-0">@Model.ApprovalRemarks</p>
                        </div>
                    }
                </div>
            </div>
        }

        @if (Model.Status == "Pending")
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h4 class="card-title">Actions</h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Leaves/ProcessUnpaidLeave/@Model.UnpaidLeaveRequestID" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Process Request
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
