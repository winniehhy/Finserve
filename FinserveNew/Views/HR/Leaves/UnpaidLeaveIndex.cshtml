@model IEnumerable<FinserveNew.Models.UnpaidLeaveRequestModel>

@{
    ViewData["Title"] = "Unpaid Leave Requests";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Unpaid Leave Requests</h2>
            <p class="text-muted">Review and manage unpaid leave requests</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <a asp-action="LeaveIndex" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to All Leaves
                </a>
                <a asp-action="PendingLeaves" class="btn btn-outline-warning">
                    <i class="fas fa-clock me-2"></i>Pending Leaves
                </a>
                <a asp-action="EmployeeLeaveBalance" class="btn btn-outline-info">
                    <i class="fas fa-balance-scale me-2"></i>Employee Balance
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Success"].ToString().Replace("\n", "<br/>"))
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Error"].ToString().Replace("\n", "<br/>"))
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

   

    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#all" role="tab">
                        All <span class="badge bg-secondary">@Model.Count()</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#pending" role="tab">
                        Pending <span class="badge bg-warning">@Model.Count(u => u.Status == "Pending")</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#approved" role="tab">
                        Approved <span class="badge bg-success">@Model.Count(u => u.Status == "Approved")</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#rejected" role="tab">
                        Rejected <span class="badge bg-danger">@Model.Count(u => u.Status == "Rejected")</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">
                <!-- All Requests Tab -->
                <div class="tab-pane fade show active" id="all" role="tabpanel">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="unpaidLeaveTable">
                                <thead>
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Employee ID</th>
                                        <th>Leave Type</th>
                                        <th>Period</th>
                                        <th>Requested Days</th>
                                        <th>Unpaid Days</th>
                                        <th>Status</th>
                                        <th>Submission Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.OrderByDescending(u => u.SubmissionDate))
                                    {
                                        <tr class="leave-row" data-status="@request.Status.ToLower()">
                                            <td><strong>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</strong></td>
                                            <td>
                                                <span class="badge bg-secondary">@request.EmployeeID</span>
                                                <br/>
                                                <small class="text-muted">@request.Employee.Username</small>
                                            </td>
                                            <td><span class="badge bg-primary text-dark">@request.LeaveType.TypeName</span></td>
                                            <td>
                                                <strong>@request.StartDate.ToString("dd MMM")</strong> - 
                                                <strong>@request.EndDate.ToString("dd MMM yyyy")</strong>
                                                <br/>
                                                <small class="text-muted">
                                                    @{
                                                        var totalDays = (request.EndDate.DayNumber - request.StartDate.DayNumber) + 1;
                                                    }
                                                    (@totalDays day@(totalDays != 1 ? "s" : "") total)
                                                </small>
                                            </td>
                                            <td><span class="badge bg-primary">@request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-warning text-dark">@request.ExcessDays day@(request.ExcessDays != 1 ? "s" : "")</span></td>
                                            <td>
                                                @if (request.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">@request.Status</span>
                                                }
                                                else if (request.Status == "Approved")
                                                {
                                                    <span class="badge bg-success">@request.Status</span>
                                                    if (request.ApprovalDate.HasValue)
                                                    {
                                                        <br/>
                                                        <small class="text-muted">@request.ApprovalDate.Value.ToString("dd MMM yyyy")</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@request.Status</span>
                                                    if (request.ApprovalDate.HasValue)
                                                    {
                                                        <br/>
                                                        <small class="text-muted">@request.ApprovalDate.Value.ToString("dd MMM yyyy")</small>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @request.SubmissionDate.ToString("dd MMM yyyy")
                                                <br/>
                                                <small class="text-muted">@request.SubmissionDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (request.Status == "Pending")
                                                {
                                                    <a asp-action="ProcessUnpaidLeave" asp-route-id="@request.UnpaidLeaveRequestID" 
                                                       class="btn btn-sm btn-primary" title="Process Request">
                                                        <i class="fas fa-clipboard-check me-1"></i>Process
                                                    </a>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-info" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#detailsModal" 
                                                            data-request-id="@request.UnpaidLeaveRequestID"
                                                            data-employee="@request.Employee.Username"
                                                            data-leave-type="@request.LeaveType.TypeName"
                                                            data-start="@request.StartDate.ToString("dd MMM yyyy")"
                                                            data-end="@request.EndDate.ToString("dd MMM yyyy")"
                                                            data-requested="@request.RequestedDays"
                                                            data-unpaid="@request.ExcessDays"
                                                            data-reason="@request.Reason"
                                                            data-justification="@request.JustificationReason"
                                                            data-status="@request.Status"
                                                            data-approval-date="@(request.ApprovalDate?.ToString("dd MMM yyyy HH:mm") ?? "N/A")"
                                                            data-approval-remarks="@(request.ApprovalRemarks ?? "No remarks")"
                                                            title="View Details">
                                                        <i class="fas fa-eye me-1"></i>Details
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No unpaid leave requests found.</p>
                        </div>
                    }
                </div>

                <!-- Pending Requests Tab -->
                <div class="tab-pane fade" id="pending" role="tabpanel">
                    @if (Model.Any(u => u.Status == "Pending"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Employee ID</th>
                                        <th>Leave Type</th>
                                        <th>Period</th>
                                        <th>Requested Days</th>
                                        <th>Unpaid Days</th>
                                        <th>Status</th>
                                        <th>Submission Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Pending").OrderByDescending(u => u.SubmissionDate))
                                    {
                                        <tr>
                                            <td><strong>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</strong></td>
                                            <td>
                                                <span class="badge bg-secondary">@request.EmployeeID</span>
                                                <br/>
                                                <small class="text-muted">@request.Employee.Username</small>
                                            </td>
                                            <td><span class="badge bg-primary text-dark">@request.LeaveType.TypeName</span></td>
                                            <td>
                                                <strong>@request.StartDate.ToString("dd MMM")</strong> - 
                                                <strong>@request.EndDate.ToString("dd MMM yyyy")</strong>
                                            </td>
                                            <td><span class="badge bg-primary">@request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-warning text-dark">@request.ExcessDays day@(request.ExcessDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-warning">@request.Status</span></td>
                                            <td>@request.SubmissionDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <a asp-action="ProcessUnpaidLeave" asp-route-id="@request.UnpaidLeaveRequestID" 
                                                   class="btn btn-sm btn-primary" title="Process Request">
                                                    <i class="fas fa-clipboard-check me-1"></i>Process
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No pending unpaid leave requests found.</p>
                        </div>
                    }
                </div>

                <!-- Approved Requests Tab -->
                <div class="tab-pane fade" id="approved" role="tabpanel">
                    @if (Model.Any(u => u.Status == "Approved"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Employee ID</th>
                                        <th>Leave Type</th>
                                        <th>Period</th>
                                        <th>Requested Days</th>
                                        <th>Unpaid Days</th>
                                        <th>Status</th>
                                        <th>Approval Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Approved").OrderByDescending(u => u.ApprovalDate))
                                    {
                                        <tr>
                                            <td><strong>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</strong></td>
                                            <td>
                                                <span class="badge bg-secondary">@request.EmployeeID</span>
                                                <br/>
                                                <small class="text-muted">@request.Employee.Username</small>
                                            </td>
                                            <td><span class="badge bg-primary text-dark">@request.LeaveType.TypeName</span></td>
                                            <td>
                                                <strong>@request.StartDate.ToString("dd MMM")</strong> - 
                                                <strong>@request.EndDate.ToString("dd MMM yyyy")</strong>
                                            </td>
                                            <td><span class="badge bg-primary">@request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-warning text-dark">@request.ExcessDays day@(request.ExcessDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-success">@request.Status</span></td>
                                            <td>@(request.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-info" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#detailsModal" 
                                                        data-request-id="@request.UnpaidLeaveRequestID"
                                                        data-employee="@request.Employee.Username"
                                                        data-leave-type="@request.LeaveType.TypeName"
                                                        data-start="@request.StartDate.ToString("dd MMM yyyy")"
                                                        data-end="@request.EndDate.ToString("dd MMM yyyy")"
                                                        data-requested="@request.RequestedDays"
                                                        data-unpaid="@request.ExcessDays"
                                                        data-reason="@request.Reason"
                                                        data-justification="@request.JustificationReason"
                                                        data-status="@request.Status"
                                                        data-approval-date="@(request.ApprovalDate?.ToString("dd MMM yyyy HH:mm") ?? "N/A")"
                                                        data-approval-remarks="@(request.ApprovalRemarks ?? "No remarks")"
                                                        title="View Details">
                                                    <i class="fas fa-eye me-1"></i>Details
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No approved unpaid leave requests found.</p>
                        </div>
                    }
                </div>

                <!-- Rejected Requests Tab -->
                <div class="tab-pane fade" id="rejected" role="tabpanel">
                    @if (Model.Any(u => u.Status == "Rejected"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Request ID</th>
                                        <th>Employee ID</th>
                                        <th>Leave Type</th>
                                        <th>Period</th>
                                        <th>Requested Days</th>
                                        <th>Unpaid Days</th>
                                        <th>Status</th>
                                        <th>Rejection Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Rejected").OrderByDescending(u => u.ApprovalDate))
                                    {
                                        <tr>
                                            <td><strong>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</strong></td>
                                            <td>
                                                <span class="badge bg-secondary">@request.EmployeeID</span>
                                                <br/>
                                                <small class="text-muted">@request.Employee.Username</small>
                                            </td>
                                            <td><span class="badge bg-primary text-dark">@request.LeaveType.TypeName</span></td>
                                            <td>
                                                <strong>@request.StartDate.ToString("dd MMM")</strong> - 
                                                <strong>@request.EndDate.ToString("dd MMM yyyy")</strong>
                                            </td>
                                            <td><span class="badge bg-primary">@request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-warning text-dark">@request.ExcessDays day@(request.ExcessDays != 1 ? "s" : "")</span></td>
                                            <td><span class="badge bg-danger">@request.Status</span></td>
                                            <td>@(request.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-info" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#detailsModal" 
                                                        data-request-id="@request.UnpaidLeaveRequestID"
                                                        data-employee="@request.Employee.Username"
                                                        data-leave-type="@request.LeaveType.TypeName"
                                                        data-start="@request.StartDate.ToString("dd MMM yyyy")"
                                                        data-end="@request.EndDate.ToString("dd MMM yyyy")"
                                                        data-requested="@request.RequestedDays"
                                                        data-unpaid="@request.ExcessDays"
                                                        data-reason="@request.Reason"
                                                        data-justification="@request.JustificationReason"
                                                        data-status="@request.Status"
                                                        data-approval-date="@(request.ApprovalDate?.ToString("dd MMM yyyy HH:mm") ?? "N/A")"
                                                        data-approval-remarks="@(request.ApprovalRemarks ?? "No remarks")"
                                                        title="View Details">
                                                    <i class="fas fa-eye me-1"></i>Details
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No rejected unpaid leave requests found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">
                    <i class="fas fa-money-bill-alt me-2"></i>Unpaid Leave Request Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-primary">Request Information</h6>
                        <p><strong>Request ID:</strong> <span id="modal-request-id"></span></p>
                        <p><strong>Employee:</strong> <span id="modal-employee"></span></p>
                        <p><strong>Leave Type:</strong> <span id="modal-leave-type"></span></p>
                        <p><strong>Period:</strong> <span id="modal-period"></span></p>
                        <p><strong>Requested Days:</strong> <span id="modal-requested"></span></p>
                        <p><strong>Unpaid Days:</strong> <span id="modal-unpaid"></span></p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-primary">Status Information</h6>
                        <p><strong>Status:</strong> <span id="modal-status"></span></p>
                        <p><strong>Processed Date:</strong> <span id="modal-approval-date"></span></p>
                        <p><strong>HR Remarks:</strong></p>
                        <div class="bg-light p-2 rounded">
                            <span id="modal-approval-remarks"></span>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-12">
                        <h6 class="text-primary">Employee Reason</h6>
                        <div class="bg-light p-2 rounded mb-3">
                            <span id="modal-reason"></span>
                        </div>
                        <h6 class="text-primary">Justification for Unpaid Leave</h6>
                        <div class="bg-warning bg-opacity-10 p-2 rounded border border-warning">
                            <span id="modal-justification"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Details modal
            $('#detailsModal').on('show.bs.modal', function(event) {
                const button = $(event.relatedTarget);
                
                $('#modal-request-id').text('#LVE-' + button.data('request-id').toString().padStart(3, '0'));
                $('#modal-employee').text(button.data('employee'));
                $('#modal-leave-type').text(button.data('leave-type'));
                $('#modal-period').text(button.data('start') + ' - ' + button.data('end'));
                $('#modal-requested').text(button.data('requested') + ' days');
                $('#modal-unpaid').text(button.data('unpaid') + ' days');
                $('#modal-reason').text(button.data('reason') || 'No reason provided');
                $('#modal-justification').text(button.data('justification') || 'No justification provided');
                $('#modal-status').html('<span class="badge bg-' + 
                    (button.data('status') === 'Approved' ? 'success' : 'danger') + '">' + 
                    button.data('status') + '</span>');
                $('#modal-approval-date').text(button.data('approval-date'));
                $('#modal-approval-remarks').text(button.data('approval-remarks'));
            });
        });
    </script>
}