@model IEnumerable<FinserveNew.Models.UnpaidLeaveRequestModel>

    @{
    ViewData["Title"] = "Unpaid Leave Requests";
    }

    <div class="container-fluid py-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2>Unpaid Leave Requests</h2>
                <p class="text-muted">Review and manage unpaid leave requests</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                    <a asp-action="LeaveIndex" class="btn btn-outline-secondary">
                        <i class="fas fa-money-bill-alt me-2"></i>All Leaves
                    </a>
                    <a asp-action="EmployeeLeaveBalance" class="btn btn-outline-secondary">
                        <i class="fas fa-balance-scale me-2"></i>Employee Balance
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Success"].ToString().Replace("\n", "<br/>"))
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

        @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(TempData["Error"].ToString().Replace("\n", "<br/>"))
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }



        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#all" role="tab">
                            All <span class="badge bg-secondary">@Model.Count()</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#pending" role="tab">
                            Pending <span class="badge bg-warning">@Model.Count(u => u.Status == "Pending")</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#approved" role="tab">
                            Approved <span class="badge bg-success">@Model.Count(u => u.Status == "Approved")</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#rejected" role="tab">
                            Rejected <span class="badge bg-danger">@Model.Count(u => u.Status == "Rejected")</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="card-body">
                <div class="tab-content">
                    <!-- All Requests Tab -->
                    <div class="tab-pane fade show active" id="all" role="tabpanel">
                        @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="unpaidLeaveTable">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Submission Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.OrderByDescending(u => u.SubmissionDate))
                                    {
                                    <tr class="leave-row" data-status="@request.Status.ToLower()">
                                        <td>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</td>
                                        <td><span class="badge bg-secondary">@request.EmployeeID</span></td>
                                        <td>@(request.Employee != null ? ($"{request.Employee.FirstName} {request.Employee.LastName}") : "-")</td>
                                        <td><span class="badge bg-info">@request.LeaveType.TypeName</span></td>
                                        <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <strong class="text-success">
                                                @request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")
                                            </strong>
                                        </td>
                                        <td>
                                            @if (request.Status == "Pending")
                                            {
                                                <span class="badge bg-warning">@request.Status</span>
                                            }
                                            else if (request.Status == "Approved")
                                            {
                                                <span class="badge bg-success">@request.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@request.Status</span>
                                            }
                                        </td>
                                        <td>@request.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <div class="btn-group">
                                                @if (request.Status == "Pending")
                                                {
                                                    <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                        <i class="fas fa-eye me-1"></i> View
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-primary" title="Process Leave" onclick="processUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                        <i class="fas fa-edit me-1"></i> Process
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                        <i class="fas fa-eye me-1"></i> View
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No unpaid leave requests found.</p>
                        </div>
                    }
                    </div>

                    <!-- Pending Requests Tab -->
                    <div class="tab-pane fade" id="pending" role="tabpanel">
                        @if (Model.Any(u => u.Status == "Pending"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Submission Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Pending").OrderByDescending(u => u.SubmissionDate))
                                    {
                                    <tr>
                                        <td>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</td>
                                        <td><span class="badge bg-secondary">@request.EmployeeID</span></td>
                                        <td>@(request.Employee != null ? ($"{request.Employee.FirstName} {request.Employee.LastName}") : "-")</td>
                                        <td><span class="badge bg-info">@request.LeaveType.TypeName</span></td>
                                        <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <strong class="text-success">
                                                @request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")
                                            </strong>
                                        </td>
                                        <td><span class="badge bg-warning">@request.Status</span></td>
                                        <td>@request.SubmissionDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <div class="btn-group">
                                                <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </button>
                                                <button class="btn btn-sm btn-outline-primary" title="Process Leave" onclick="processUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                    <i class="fas fa-edit me-1"></i> Process
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No pending unpaid leave requests found.</p>
                        </div>
                    }
                    </div>

                    <!-- Approved Requests Tab -->
                    <div class="tab-pane fade" id="approved" role="tabpanel">
                        @if (Model.Any(u => u.Status == "Approved"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Approval Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Approved").OrderByDescending(u => u.ApprovalDate))
                                    {
                                    <tr>
                                        <td>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</td>
                                        <td><span class="badge bg-secondary">@request.EmployeeID</span></td>
                                        <td>@(request.Employee != null ? ($"{request.Employee.FirstName} {request.Employee.LastName}") : "-")</td>
                                        <td><span class="badge bg-info">@request.LeaveType.TypeName</span></td>
                                        <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <strong class="text-success">
                                                @request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")
                                            </strong>
                                        </td>
                                        <td><span class="badge bg-success">@request.Status</span></td>
                                        <td>@(request.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                <i class="fas fa-eye me-1"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No approved unpaid leave requests found.</p>
                        </div>
                    }
                    </div>

                    <!-- Rejected Requests Tab -->
                    <div class="tab-pane fade" id="rejected" role="tabpanel">
                        @if (Model.Any(u => u.Status == "Rejected"))
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Leave ID</th>
                                        <th>Employee ID</th>
                                        <th>Employee Name</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Duration</th>
                                        <th>Status</th>
                                        <th>Rejection Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model.Where(u => u.Status == "Rejected").OrderByDescending(u => u.ApprovalDate))
                                    {
                                    <tr>
                                        <td>#LVE-@request.UnpaidLeaveRequestID.ToString("D3")</td>
                                        <td><span class="badge bg-secondary">@request.EmployeeID</span></td>
                                        <td>@(request.Employee != null ? ($"{request.Employee.FirstName} {request.Employee.LastName}") : "-")</td>
                                        <td><span class="badge bg-info">@request.LeaveType.TypeName</span></td>
                                        <td>@request.StartDate.ToString("dd MMM yyyy")</td>
                                        <td>@request.EndDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <strong class="text-success">
                                                @request.RequestedDays day@(request.RequestedDays != 1 ? "s" : "")
                                            </strong>
                                        </td>
                                        <td><span class="badge bg-danger">@request.Status</span></td>
                                        <td>@(request.ApprovalDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-info" title="View Details" onclick="viewUnpaidLeave(@request.UnpaidLeaveRequestID)">
                                                <i class="fas fa-eye me-1"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-0">
                            <p class="mb-0">No rejected unpaid leave requests found.</p>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>



    @section Scripts {
        <script>
            function viewUnpaidLeave(leaveId) {
                window.location.href = '@Url.Action("UnpaidLeaveDetails", "Leaves")/' + leaveId;
            }

            function processUnpaidLeave(leaveId) {
                window.location.href = '@Url.Action("ProcessUnpaidLeave", "Leaves")/' + leaveId;
            }
        </script>
    }
