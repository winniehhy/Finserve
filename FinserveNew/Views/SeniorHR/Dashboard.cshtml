@{
    ViewData["Title"] = "Senior HR Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Dashboard Content -->
<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-user-tie me-2"></i>
                    Senior HR Dashboard
                </h1>
                <p class="page-subtitle">Welcome back, @User.Identity.Name | @ViewBag.CurrentMonth</p>
            </div>
            <div class="d-flex gap-2">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-plus me-2"></i>Quick Action
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("ApprovePayrolls", "Payroll")">Review Payroll Approvals</a></li>
                        @* <li><a class="dropdown-item" href="@Url.Action("AllAccounts", "Accounts")">Manage Employees</a></li> *@
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="stat-card">
                <div class="stat-icon bg-danger">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@ViewBag.PendingPayrollCount</div>
                    <div class="stat-label">Pending Payroll Approvals</div>
                    <div class="stat-change @(ViewBag.PendingPayrollCount > 0 ? "negative" : "positive")">
                        <i class="fas fa-@(ViewBag.PendingPayrollCount > 0 ? "exclamation-triangle" : "check")"></i>
                        @(ViewBag.PendingPayrollCount > 0 ? "Requires attention" : "All approved")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-3">
            <div class="stat-card">
                <div class="stat-icon bg-primary">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@ViewBag.TotalEmployees</div>
                    <div class="stat-label">Total Employees</div>
                    <div class="stat-change positive">
                        <i class="fas fa-user-check"></i> @ViewBag.ActiveEmployees active
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-3">
            <div class="stat-card">
                <div class="stat-icon bg-success">
                    <i class="fas fa-money-check-alt"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@ViewBag.ApprovedPayrollCount</div>
                    <div class="stat-label">Payrolls Approved</div>
                    <div class="stat-change positive">
                        <i class="fas fa-calculator"></i> This month
                    </div>
                </div>
            </div>
        </div> 
    </div>

    <!-- Main Content Grid -->
    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Quick Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("ApprovePayrolls", "Payroll")" class="quick-action-btn @(ViewBag.PendingPayrollCount > 5 ? "urgent" : "")">
                                <div class="quick-action-icon bg-@(ViewBag.PendingPayrollCount > 5 ? "danger" : "success")">
                                    <i class="fas fa-check-circle"></i>
                                    @if (ViewBag.PendingPayrollCount > 0)
                                    {
                                        <span class="badge bg-red text-white position-absolute top-0 start-100 translate-middle">@ViewBag.PendingPayrollCount</span>
                                    }
                                </div>
                                <div class="quick-action-content">
                                    <h6>Approve Payrolls</h6>
                                    <p>Review pending payrolls</p>
                                    @if (ViewBag.PendingPayrollCount == 0)
                                    {
                                        <span class="text-success">All up to date</span>
                                    }
                                </div>
                            </a>
                        </div>
                        @* <div class="col-md-6 mb-3">
                            <a href="@Url.Action("AllAccounts", "Accounts")" class="quick-action-btn">
                                <div class="quick-action-icon bg-primary">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6>Manage Employees</h6>
                                    <p>View and manage staff</p>
                                </div>
                            </a>
                        </div> *@
                    </div>
                </div>
            </div>


            <!-- Pending Payroll Approvals -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-@(ViewBag.PendingPayrollCount > 0 ? "exclamation-triangle text-danger" : "check-circle text-success") me-2"></i>
                        @(ViewBag.PendingPayrollCount > 0 ? "Pending Payroll Approvals" : "Payroll Approvals")
                    </h5>
                    <a href="@Url.Action("ApprovePayrolls", "Payroll")" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (ViewBag.PendingPayrolls != null && ((List<FinserveNew.Models.Payroll>)ViewBag.PendingPayrolls).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Employee ID</th>
                                        <th>Employee</th>
                                        <th>Month/Year</th>
                                        <th>Basic Salary</th>
                                        <th>Net Salary</th>
                                        <th>Total Cost</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payroll in ((List<FinserveNew.Models.Payroll>)ViewBag.PendingPayrolls).Take(5))
                                    {
                                        <tr class="@(ViewBag.PendingPayrollCount > 10 ? "table-danger" : ViewBag.PendingPayrollCount > 5 ? "table-warning" : "")">
                                            <td>@payroll.EmployeeID</td>
                                            <td>@payroll.Employee.FirstName @payroll.Employee.LastName</td>
                                            <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(payroll.Month) @payroll.Year</td>
                                            <td>RM @payroll.BasicSalary.ToString("N2")</td>
                                            <td>RM @payroll.TotalWages.ToString("N2")</td>
                                            <td>RM @payroll.TotalEmployerCost.ToString("N2")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("PayrollDetails", "Payroll", new { id = payroll.PayrollID })" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye me-1"></i> Review
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-success" onclick="quickApprove('@payroll.PayrollID', '@payroll.Employee.FirstName @payroll.Employee.LastName')">
                                                        <i class="fas fa-check me-1"></i> Quick Approve
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (((List<FinserveNew.Models.Payroll>)ViewBag.PendingPayrolls).Count > 5)
                        {
                            <div class="text-center mt-3">
                                <p class="text-muted">Showing 5 of @((List<FinserveNew.Models.Payroll>)ViewBag.PendingPayrolls).Count pending approvals</p>
                                <a href="@Url.Action("ApprovePayrolls", "Payroll")" class="btn btn-primary">View All @((List<FinserveNew.Models.Payroll>)ViewBag.PendingPayrolls).Count Pending</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h5 class="text-success">All Caught Up!</h5>
                            <p class="text-muted">No pending payroll approvals</p>
                            <p class="text-success">All payrolls are up to date!</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Payroll Activities -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Recent Payroll Activities
                    </h5>
                    <a href="@Url.Action("ApprovePayrolls", "Payroll")" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentPayrollActivities != null && ((List<FinserveNew.Models.Payroll>)ViewBag.RecentPayrollActivities).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th>Month/Year</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var activity in (List<FinserveNew.Models.Payroll>)ViewBag.RecentPayrollActivities)
                                    {
                                        <tr>
                                            <td>@activity.Employee.FirstName @activity.Employee.LastName</td>
                                            <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(activity.Month) @activity.Year</td>
                                            <td>RM @activity.TotalWages.ToString("N2")</td>
                                            <td>
                                                <span class="badge bg-@(activity.PaymentStatus == "Approved" ? "success" : activity.PaymentStatus == "Pending Approval" ? "warning" : activity.PaymentStatus == "Rejected" ? "danger" : "secondary")">
                                                    @activity.PaymentStatus
                                                </span>
                                            </td>
                                            <td>@activity.CreatedDate.ToString("dd MMM, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No recent payroll activities</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Payroll Status Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Payroll Status Summary
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.PayrollStatusSummary != null && ((List<object>)ViewBag.PayrollStatusSummary).Any())
                    {
                        @foreach (var status in (List<object>)ViewBag.PayrollStatusSummary)
                        {
                            var statusData = status as dynamic;
                            var statusName = statusData?.Status ?? "Unknown";
                            var statusCount = statusData?.Count ?? 0;
                            var totalPayrolls = ViewBag.TotalPayrolls ?? 1;
                            var percentage = totalPayrolls > 0 ? (statusCount * 100.0 / totalPayrolls) : 0;
                            var progressColor = statusName == "Approved" ? "success" : statusName == "Pending Approval" ? "warning" : statusName == "Completed" ? "info" : statusName == "Rejected" ? "danger" : "secondary";

                            <div class="status-item mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>@statusName</span>
                                    <span class="fw-bold">@statusCount payrolls</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-@progressColor" style="width: @percentage%"></div>
                                </div>
                                <small class="text-muted">@percentage.ToString("F1")%</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-chart-pie fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No payroll data available for @ViewBag.CurrentMonth</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Monthly Overview -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Monthly Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="overview-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-users text-primary me-2"></i>Total Employees</span>
                            <span class="fw-bold">@ViewBag.TotalEmployees</span>
                        </div>
                    </div>
                    <div class="overview-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-check text-success me-2"></i>Approved Payrolls</span>
                            <span class="fw-bold">@ViewBag.ApprovedPayrollCount</span>
                        </div>
                    </div>
                    <div class="overview-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-clock text-warning me-2"></i>Pending Approvals</span>
                            <span class="fw-bold text-@(ViewBag.PendingPayrollCount > 0 ? "danger" : "success")">@ViewBag.PendingPayrollCount</span>
                        </div>
                    </div>
                    <div class="overview-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-list text-info me-2"></i>Total Payrolls</span>
                            <span class="fw-bold">@ViewBag.TotalPayrolls</span>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Quick Notifications -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bell me-2"></i>Notifications
                    </h5>
                    <button class="btn btn-sm btn-outline-secondary" onclick="markAllAsRead()">
                        Mark All Read
                    </button>
                </div>
                <div class="card-body" id="notificationContainer">
                    @{
                        var hasNotifications = false;
                    }

                    @* Urgent Pending Payroll Notifications *@
                    @if (ViewBag.PendingPayrollCount > 10)
                    {
                        hasNotifications = true;
                        <div class="notification-item urgent" data-type="payroll-urgent" data-id="payroll-urgent-@DateTime.Now.Month">
                            <div class="notification-icon bg-danger">
                                <i class="fas fa-exclamation-circle"></i>
                            </div>
                            <div class="notification-content">
                                <h6 class="text-danger">Urgent: High Volume of Pending Approvals</h6>
                                <p>You have @ViewBag.PendingPayrollCount payroll(s) waiting for approval. This is higher than normal.</p>
                                <small class="text-muted">Immediate action recommended</small>
                            </div>
                            <button class="btn btn-sm btn-outline-danger notification-read-btn" onclick="markAsRead(this, 'payroll-urgent', 'payroll-urgent-@DateTime.Now.Month')">
                                Mark as Read
                            </button>
                        </div>
                    }
                    else if (ViewBag.PendingPayrollCount > 0)
                    {
                        hasNotifications = true;
                        <div class="notification-item" data-type="payroll-pending" data-id="payroll-pending-@DateTime.Now.Month">
                            <div class="notification-icon bg-warning">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="notification-content">
                                <h6>Pending Payroll Approvals</h6>
                                <p>You have @ViewBag.PendingPayrollCount payroll(s) waiting for your approval.</p>
                                <small class="text-muted">Review when convenient</small>
                            </div>
                            <button class="btn btn-sm btn-outline-primary notification-read-btn" onclick="markAsRead(this, 'payroll-pending', 'payroll-pending-@DateTime.Now.Month')">
                                Mark as Read
                            </button>
                        </div>
                    }

                    @* Recent Approvals *@
                    @if (ViewBag.ApprovedPayrollCount > 0)
                    {
                        hasNotifications = true;
                        <div class="notification-item" data-type="payroll-approved" data-id="payroll-approved-@DateTime.Now.Month">
                            <div class="notification-icon bg-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="notification-content">
                                <h6>Payrolls Approved This Month</h6>
                                <p>You have successfully approved @ViewBag.ApprovedPayrollCount payroll(s) this month.</p>
                                <small class="text-muted">Great job keeping up!</small>
                            </div>
                            <button class="btn btn-sm btn-outline-primary notification-read-btn" onclick="markAsRead(this, 'payroll-approved', 'payroll-approved-@DateTime.Now.Month')">
                                Mark as Read
                            </button>
                        </div>
                    }

                    @if (!hasNotifications)
                    {
                        <div class="text-center py-3" id="noNotifications">
                            <i class="fas fa-bell-slash fa-2x text-muted mb-2"></i>
                            <p class="text-muted">All caught up! No urgent notifications.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Senior HR Dashboard functionality
        document.addEventListener('DOMContentLoaded', function() {
            loadReadNotifications();
            });

        // Quick approve functionality
        function quickApprove(payrollId, employeeName) {
            if (confirm(`Are you sure you want to approve the payroll for ${employeeName}?`)) {
                // Create a form and submit it
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("ApprovePayroll", "Payroll")';
                
                const payrollIdInput = document.createElement('input');
                payrollIdInput.type = 'hidden';
                payrollIdInput.name = 'id';
                payrollIdInput.value = payrollId;
                
                const commentsInput = document.createElement('input');
                commentsInput.type = 'hidden';
                commentsInput.name = 'comments';
                commentsInput.value = 'Quick approved from dashboard';
                
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = $('input[name="__RequestVerificationToken"]').val();
                
                form.appendChild(payrollIdInput);
                form.appendChild(commentsInput);
                form.appendChild(tokenInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Notification functions
        let readNotifications = JSON.parse(localStorage.getItem('seniorhr_readNotifications') || '[]');

        function loadReadNotifications() {
            readNotifications.forEach(function(notificationId) {
                const notification = document.querySelector(`[data-id="${notificationId}"]`);
                if (notification) {
                    notification.style.display = 'none';
                }
            });
            checkForEmptyNotifications();
        }

        function markAsRead(button, type, id) {
            const notificationItem = button.closest('.notification-item');

            if (!readNotifications.includes(id)) {
                readNotifications.push(id);
                localStorage.setItem('seniorhr_readNotifications', JSON.stringify(readNotifications));
            }

            notificationItem.style.transition = 'opacity 0.3s ease';
            notificationItem.style.opacity = '0';

            setTimeout(() => {
                notificationItem.style.display = 'none';
                checkForEmptyNotifications();
            }, 300);
        }

        function markAllAsRead() {
            const notifications = document.querySelectorAll('.notification-item');

            notifications.forEach(function(notification) {
                const id = notification.getAttribute('data-id');
                if (id && !readNotifications.includes(id)) {
                    readNotifications.push(id);
                }

                notification.style.transition = 'opacity 0.3s ease';
                notification.style.opacity = '0';

                setTimeout(() => {
                    notification.style.display = 'none';
                }, 300);
            });

            localStorage.setItem('seniorhr_readNotifications', JSON.stringify(readNotifications));

            setTimeout(() => {
                checkForEmptyNotifications();
            }, 300);
        }

        function checkForEmptyNotifications() {
            const visibleNotifications = document.querySelectorAll('.notification-item[style*="display: none"], .notification-item[style*="opacity: 0"]');
            const allNotifications = document.querySelectorAll('.notification-item');

            if (visibleNotifications.length === allNotifications.length || allNotifications.length === 0) {
                const container = document.getElementById('notificationContainer');
                let emptyState = document.getElementById('noNotifications');

                if (!emptyState) {
                    emptyState = document.createElement('div');
                    emptyState.id = 'noNotifications';
                    emptyState.className = 'text-center py-3';
                    emptyState.innerHTML = `
                        <i class="fas fa-bell-slash fa-2x text-muted mb-2"></i>
                        <p class="text-muted">All caught up! No urgent notifications.</p>
                    `;
                    container.appendChild(emptyState);
                } else {
                    emptyState.style.display = 'block';
                }
            }
        }
    </script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/rbac_dashboard.css" />
    <style>
        /* Senior HR specific styles */
        .overview-item {
            padding: 8px 0;
            border-bottom: 1px solid #f1f3f4;
            transition: background-color 0.3s ease;
        }
        .overview-item:last-child {
            border-bottom: none;
        }
        .overview-item:hover {
            background-color: #f8f9fa;
            border-radius: 4px;
            padding: 8px 10px;
            margin: 0 -10px;
        }

        /* Enhanced urgent styling */
        .stat-card.urgent {
            animation: urgentPulse 2s infinite;
            border: 2px solid #dc3545;
        }

        .notification-item.urgent {
            border-left: 4px solid #dc3545;
            background-color: #fff5f5;
        }

        .quick-action-btn.urgent {
            animation: urgentPulse 2s infinite;
        }

        @@keyframes urgentPulse {
            0% {
                box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(220, 53, 69, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(220, 53, 69, 0);
            }
        }

        /* Progress circle styling */
        .progress-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            position: relative;
            background: conic-gradient(#198754 0deg, #e9ecef 0deg);
        }

        .progress-circle::before {
            content: '';
            position: absolute;
            width: 70%;
            height: 70%;
            border-radius: 50%;
            background: white;
        }

        .progress-text {
            position: relative;
            z-index: 1;
            font-weight: bold;
            color: #198754;
        }

        /* Enhanced table styling */
        .table-danger {
            --bs-table-bg: #f8d7da;
        }

        .table-warning {
            --bs-table-bg: #fff3cd;
        }

        /* Enhanced quick action buttons */
        .quick-action-btn {
            position: relative;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
        }

        .quick-action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            color: inherit;
            text-decoration: none;
        }

        /* Better card styling */
        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        /* Status item enhancements */
        .status-item {
            transition: all 0.3s ease;
            padding: 10px;
            border-radius: 8px;
        }

        .status-item:hover {
            background-color: #f8f9fa;
        }
    </style>
}