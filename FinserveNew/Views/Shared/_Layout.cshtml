<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finserve</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <!-- wwwroot/lib/css/layout -->
    <link href="~/css/layout.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="d-flex align-items-center">
                <button class="header-btn mobile-menu-btn me-2" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <div class="logo-icon">FS</div>
                    Finserve
                </a>
            </div>

            <div class="header-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="header-btn">
                        <i class="fas fa-search"></i>
                    </button>
                    <button class="header-btn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>
                    <button class="theme-toggle" onclick="toggleTheme()">
                        <i class="fas fa-sun"></i>
                        <i class="fas fa-moon"></i>
                    </button>
                    <div class="user-menu dropdown" data-bs-toggle="dropdown">
                        <div class="user-avatar">
                            @{
                                var initials = User.Identity.Name?.Split(' ').Select(x => x.FirstOrDefault()).Take(2);
                                var userInitials = initials != null ? string.Join("", initials) : "U";
                            }
                            @userInitials
                        </div>
                        <span class="d-none d-md-inline">@User.Identity.Name</span>
                        <i class="fas fa-chevron-down ms-1"></i>
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")"><i class="fas fa-user me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Settings", "Account")"><i class="fas fa-cog me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Login</a>
                }
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <ul class="sidebar-menu">
            <!-- Main Section -->
            <li class="menu-section">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                }
            <li class="menu-item">
                <a href="@Url.Action("Index", "Home")" class="menu-link @(currentController == "Home" ? "active" : "")">
                    <i class="fas fa-tachometer-alt menu-icon"></i>
                    Dashboard
                </a>
            </li>

            <!-- Admin/HR Only Sections -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR"))
            {
                <li class="menu-item">
                    <a href="@Url.Action("AllAccounts", "Accounts")" class="menu-link @(currentController == "Accounts" ? "active" : "")">
                        <i class="fas fa-users menu-icon"></i>
                        Employees
                    </a>
                </li>
            }

            <!-- Admin/HR/Manager Only -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
            {
                <li class="menu-item">
                    <a href="@Url.Action("Dashboard", "Payroll")" class="menu-link @(currentController == "Payroll" ? "active" : "")">
                        <i class="fas fa-money-bill-wave menu-icon"></i>
                        Payroll
                    </a>
                </li>
            }
            </li>

            <!-- Employee Claims Section - All authenticated users -->
            <li class="menu-section">
                <div class="menu-section-title">CLAIMS</div>
            <li class="menu-item">
                <a href="@Url.Action("Index", "Claim")" class="menu-link @(currentController == "Claim" ? "active" : "")">
                    <i class="fas fa-file-medical menu-icon"></i>
                    My Claims
                </a>
            </li>

            <!-- Admin/HR/Manager - Claim Management -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
            {
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Claim")" class="menu-link @(currentController == "Claim" ? "active" : "")">
                        <i class="fas fa-clipboard-list menu-icon"></i>
                        Claim Management
                    </a>
                </li>
            }
            </li>

            <!-- Employee Leaves Section - All authenticated users -->
            <li class="menu-section">
                <div class="menu-section-title">LEAVES</div>
            <li class="menu-item">
                <a href="@Url.Action("LeaveRecords", "Leaves")" class="menu-link @(currentController == "Employee" && ViewContext.RouteData.Values["action"]?.ToString() == "Leave" ? "active" : "")">
                    <i class="fas fa-calendar-alt menu-icon"></i>
                    My Leaves
                </a>
            </li>

            <!-- Admin/HR/Manager - Leave Management -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
            {
                <li class="menu-item">
                    <a href="@Url.Action("LeaveRecords", "Leaves")" class="menu-link @(currentController == "Leaves" ? "active" : "")">
                        <i class="fas fa-calendar-check menu-icon"></i>
                        Leave Records
                    </a>
                </li>
            }
            </li>

            <!-- Reports Section - Admin/HR/Manager Only -->
            @if (User.IsInRole("Admin") || User.IsInRole("HR") || User.IsInRole("Manager"))
            {
                <li class="menu-section">
                    <div class="menu-section-title">REPORTS</div>
                <li class="menu-item">
                    <a href="@Url.Action("FinancialReports", "Reports")" class="menu-link @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "FinancialReports" ? "active" : "")">
                        <i class="fas fa-chart-line menu-icon"></i>
                        Financial Reports
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("ActivityReports", "Reports")" class="menu-link @(currentController == "Reports" && ViewContext.RouteData.Values["action"]?.ToString() == "ActivityReports" ? "active" : "")">
                        <i class="fas fa-chart-pie menu-icon"></i>
                        Activity Reports
                    </a>
                </li>
                </li>
            }

            <!-- Others Section - Admin Only -->
            @if (User.IsInRole("Admin"))
            {
                <li class="menu-section">
                    <div class="menu-section-title">ADMINISTRATION</div>
                <li class="menu-item">
                    <a href="@Url.Action("Settings", "Others")" class="menu-link @(currentController == "Others" && ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")">
                        <i class="fas fa-cogs menu-icon"></i>
                        Settings
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("UserManagement", "Admin")" class="menu-link @(currentController == "Admin" ? "active" : "")">
                        <i class="fas fa-users-cog menu-icon"></i>
                        User Management
                    </a>
                </li>
                </li>
            }

            <!-- General Section - All authenticated users -->
            <li class="menu-section">
                <div class="menu-section-title">GENERAL</div>
            <li class="menu-item">
                <a href="@Url.Action("HelpCenter", "Others")" class="menu-link @(currentController == "Others" && ViewContext.RouteData.Values["action"]?.ToString() == "HelpCenter" ? "active" : "")">
                    <i class="fas fa-life-ring menu-icon"></i>
                    Help Center
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("BackToWebsite", "Others")" class="menu-link @(currentController == "Others" && ViewContext.RouteData.Values["action"]?.ToString() == "BackToWebsite" ? "active" : "")">
                    <i class="fas fa-external-link-alt menu-icon"></i>
                    Back To Website
                </a>
            </li>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>Made with <i class="fas fa-heart text-danger"></i> by Finserve</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>