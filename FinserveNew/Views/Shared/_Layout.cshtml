<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finserve</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <!-- wwwroot/lib/css/layout -->
    <link href="~/css/layout.css" rel="stylesheet" />  
</head>
<body>
    <!-- Header -->
    <header class="main-header">
        <div class="header-content">
            <div class="d-flex align-items-center">
                <button class="header-btn mobile-menu-btn me-2" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <div class="logo-icon">FS</div>
                    Finserve
                </a>
            </div>

            <div class="header-right">
                <button class="header-btn">
                    <i class="fas fa-search"></i>
                </button>
                <button class="header-btn">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </button>
                <button class="theme-toggle" onclick="toggleTheme()">
                    <i class="fas fa-sun"></i>
                    <i class="fas fa-moon"></i>
                </button>
                <div class="user-menu" data-bs-toggle="dropdown">
                    <div class="user-avatar">JD</div>
                    <span class="d-none d-md-inline">John Doe</span>
                    <i class="fas fa-chevron-down ms-1"></i>
                </div>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
        <ul class="sidebar-menu">
            <!-- Main Section -->
            <li class="menu-section">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                }
            <li class="menu-item">
                <a href="@Url.Action("Index", "Home")" class="menu-link @(currentController == "Home" ? "active" : "")">
                    <i class="fas fa-tachometer-alt menu-icon"></i>
                    Dashboard
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("AllAccounts", "Accounts")" class="menu-link @(currentController == "Accounts" ? "active" : "")">
                    <i class="fas fa-university menu-icon"></i>
                    Employees
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Dashboard", "Payroll")" class="menu-link @(currentController == "Payroll" ? "active" : "")">
                    <i class="fas fa-money-bill-wave menu-icon"></i>
                    Payroll
                </a>
            </li>
            </li>

            <!-- Claims Section -->
            <li class="menu-section">
                <div class="menu-section-title">CLAIMS</div>
            <li class="menu-item">
                <a href="@Url.Action("Index", "Claim")" class="menu-link">
                    <i class="fas fa-file-medical menu-icon"></i>
                    Claim Management
                </a>
            </li>
            </li>

            <!-- Leaves Section -->
            <li class="menu-section">
                <div class="menu-section-title">LEAVES</div>
            <li class="menu-item">
                <a href="@Url.Action("LeaveRecords", "Leaves")" class="menu-link">
                    <i class="fas fa-calendar-check menu-icon"></i>
                    Leave Records
                </a>
            </li>
            </li>

            <!-- Reports Section -->
            <li class="menu-section">
                <div class="menu-section-title">REPORTS</div>
            <li class="menu-item">
                <a href="@Url.Action("FinancialReports", "Reports")" class="menu-link">
                    <i class="fas fa-chart-line menu-icon"></i>
                    Financial Reports
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("ActivityReports", "Reports")" class="menu-link">
                    <i class="fas fa-chart-pie menu-icon"></i>
                    Activity Reports
                </a>
            </li>
            </li>

            <!-- Others Section -->
            <li class="menu-section">
                <div class="menu-section-title">OTHERS</div>
            <li class="menu-item">
                <a href="@Url.Action("Settings", "Others")" class="menu-link">
                    <i class="fas fa-cogs menu-icon"></i>
                    Settings
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("HelpCenter", "Others")" class="menu-link">
                    <i class="fas fa-life-ring menu-icon"></i>
                    Help Center
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("BackToWebsite", "Others")" class="menu-link">
                    <i class="fas fa-external-link-alt menu-icon"></i>
                    Back To Website
                </a>
            </li>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>Made with <i class="fas fa-heart text-danger"></i> by Finserve</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>